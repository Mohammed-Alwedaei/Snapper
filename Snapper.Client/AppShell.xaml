<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Snapper.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Snapper.Client"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:Snapper.Client.Views">

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Title="Search" Icon="search.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
        </Tab>

        <Tab Title="Cart" Icon="basket.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" />
        </Tab>

        <Tab Title="Me" Icon="profile.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
